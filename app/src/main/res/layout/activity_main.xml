<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aincrad.akasztfa.MainActivity">

    <Button
        android:id="@+id/button_Plus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="+"
        android:background="@drawable/buttonbackround"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_toStartOf="@+id/imageView"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="31dp" />

    <Button
        android:id="@+id/button_Minus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="-"
        android:background="@drawable/buttonbackround"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/button_Plus"
        android:layout_alignStart="@+id/button_Plus" />

    <TextView
        android:id="@+id/textView_Betu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="A"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_below="@+id/button_Minus"
        android:layout_toRightOf="@+id/button_Minus"
        android:layout_toEndOf="@+id/button_Minus" />

    <Button
        android:id="@+id/button_Tippel"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="BETÅ° BEILLESZT"
        android:layout_below="@+id/textView_Betu"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:adjustViewBounds="false"
        app:srcCompat="@drawable/akasztofa13"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" />

    <TextView
        android:id="@+id/textView_Ktalalando"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="" />

</RelativeLayout>
